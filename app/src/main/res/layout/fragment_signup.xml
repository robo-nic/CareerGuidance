<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="#fff"
    android:scrollbars="none"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#fff"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/asset_sign_up"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorPrimary"
            android:text="Career Guidance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/colorPrimary"
            android:text="Your Email Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etEmailId"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:textColorHint="@color/transparentColorPrimary"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/bordered_background"
            android:hint="Your best email id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimary"
            android:text="Your Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etName"
            android:drawableStart="@drawable/ic_name"
            android:drawablePadding="10dp"
            android:textColorHint="@color/transparentColorPrimary"
            android:inputType="textPersonName"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/bordered_background"
            android:hint="Enter your name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimary"
            android:text="Set Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etPassword"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:textColorHint="@color/transparentColorPrimary"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/bordered_background"
            android:hint="Set a memorable password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimary"
            android:text="What best describes you?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerUserType"
            android:entries="@array/who_are_you"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_marginBottom="40dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:text="SIGN UP"
            android:background="@drawable/bordered_background"
            android:layout_width="200dp"
            android:layout_height="50dp" />

    </LinearLayout>

</ScrollView>
