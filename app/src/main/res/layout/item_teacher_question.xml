<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#fff"
    android:paddingBottom="25dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:id="@+id/question"
        android:textSize="20sp"
        android:text="Is this a question, really?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginBottom="10dp"
        android:textColor="@color/transparentColorPrimary"
        android:id="@+id/category"
        android:text="Category: Mindfullness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:drawablePadding="10dp"
        android:drawableEnd="@drawable/ic_wrong"
        android:textColor="@color/colorPrimary"
        android:id="@+id/option1"
        android:textSize="17sp"
        android:text="1. An option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:drawableEnd="@drawable/ic_wrong"
        android:drawablePadding="10dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/option2"
        android:textSize="17sp"
        android:text="2. Another option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:drawableEnd="@drawable/ic_wrong"
        android:drawablePadding="10dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/option3"
        android:textSize="17sp"
        android:text="3. Yet Another Option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:drawableEnd="@drawable/ic_wrong"
        android:drawablePadding="10dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/option4"
        android:textSize="17sp"
        android:text="4. OMG, another options again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>